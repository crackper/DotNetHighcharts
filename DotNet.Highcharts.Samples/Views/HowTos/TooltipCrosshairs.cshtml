@model DotNet.Highcharts.Highcharts
@{
    ViewBag.Title = "TooltipCrosshairs";
    Layout = "~/Views/Shared/_HowTosLayout.cshtml";
}

@(Model)


<div class="col-sm-12">
    <h4>Controller</h4>
    <pre class="prettyprint">
public ActionResult TooltipCrosshairs()
{
    Highcharts chart = new Highcharts("chart")
        .SetTitle(new Title {Text = "Tooltip Crosshairs"})
        .SetTooltip(new Tooltip
        {
            Crosshairs = new Crosshairs(
                new CrosshairsForamt
                {
                    Width = 3,
                    Color = Color.Red
                },
                new CrosshairsForamt
                {
                    Width = 3,
                    Color = Color.Aqua
                }
                )
        })
        .SetXAxis(new XAxis
        {
            Categories =
                new[] {"Jan", "Feb", "Mar", "Apr", "May", "Jun", 
                    "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"}
        })
        .SetSeries(new Series
        {
            Data =
                new Data(new object[]
                {29.9, 71.5, 106.4, 129.2, 144.0, 176.0, 
                    135.6, 148.5, 216.4, 194.1, 95.6, 54.4})
        });
    return View(chart);
}
</pre>
</div>